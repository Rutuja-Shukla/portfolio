{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/contact", "dest": "/api/contact.py" },
    { "src": "/api/contacts", "dest": "/api/contacts.py" },
    { "src": "/api/resume", "dest": "/api/resume.py" },
    { "src": "/api/?", "dest": "/api/root.py" },

    { "src": "/(.*)", "dest": "/frontend/build/$1" },
    { "src": "/", "dest": "/frontend/build/index.html" }
  ]
}
