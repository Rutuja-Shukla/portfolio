{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/contact",
      "methods": ["POST"],
      "dest": "api/contact.py"
    },
    {
      "src": "/api/resume",
      "methods": ["GET"],
      "dest": "api/resume.py"
    },
    {
      "src": "/api",
      "methods": ["GET"],
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/build/$1"
    }
  ]
}
